        crossorigin="anonymous">        


    <div class="container gedf-wrapper">
       

        <div class="row">
            <div class="col-md-3">
                <div class="card">
                   
                    <div class="card-body">
                        <% if(locals.user) { %> 
                        <div class="h5"><%= user.name %> </div>
                        <div class="h7 text-muted"><%= user.about %> </div>
                        
                        <% }else{ %>
                            <div class="h5">----------</div>
                        <div class="h7 text-muted">----------</div>
                        
                        <% } %> 
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="h6 text-muted">Followers</div>
                            <div class="h5">5.2342</div>
                        </li>
                        <li class="list-group-item">
                            <div class="h6 text-muted">Following</div>
                            <div class="h5">6758</div>
                        </li>
                        <li class="list-group-item">Vestibulum at eros</li>
                    </ul>
                </div>                
          
            </div>
         
            <div class="col-md-6 gedf-main">

                <!--- \\\\\\\Post-->
                <% if(locals.user) { %> 
                <div class="card gedf-card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="posts-tab" data-toggle="tab"  role="tab" aria-controls="posts" aria-selected="true">
                                    Create a Tweet </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                                <div class="form-group">
                                    <!-- <label class="sr-only" for="message">post</label> -->
                                    <form action="/tweets/create" method="POST">
                                        
                                        <textarea class="form-control" name="content" id=""  rows="4" placeholder="Your tweet.." required></textarea>
                                        <br>
                                        <input type="submit"  class="btn btn-outline-success" value="Create Tweet">
                                    </form>                    
                                </div>
                            </div>                            
                        </div>                        
                    </div>
                </div>
                <% } %> 
                <!-- Post /////-->

                <!--- \\\\\\\Post-->
                <% for(tweet of tweets) { %>
                    <%- include('./tweets/_tweet')  %> 
                <% } %>  


            </div>
